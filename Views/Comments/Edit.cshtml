@model IHeard.Models.Comment


@{
    ViewBag.Title = "Edit";
}

<h2>Editare comentariu</h2>
<br />


@using (Html.BeginForm(controllerName: "Comments", actionName: "Edit",
      method: FormMethod.Post, routeValues: new { id = Model.CommentId }))

{
    @Html.Label("CommentContent", "Continut comentariu")

    <br />

    @Html.Editor("CommentContent", new { @class = "form-control" })
    <br />

    @Html.ValidationMessage("CommentContent", null, new { @class = "text-danger" })

    <br />
    <br />

    <button class="btn  btn-primary" type="submit">Editeaza comentariul</button>

}

