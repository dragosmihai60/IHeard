@model IHeard.Models.News

<h2 class="text-center mt-5">Editare stire</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Newss",
            method: FormMethod.Post,
            routeValues: new { id = Model.NewsId }))
            {
                /* @Html.HiddenFor(m => m.Id)  */ 


                @Html.Label("NewsTitle", "Titlu Stire")
                <br />
                @Html.EditorFor(m => m.NewsTitle, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.NewsTitle, null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("NewsContent", "Continut Stire")
                <br />
                @Html.Editor("NewsContent", new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.NewsContent, null, new { @class = "text-danger" })
                <br />

                <br />

                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.CategoryId,
            new SelectList(Model.Categ, "Value", "Text"),
            "Selectati categoria", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn" style="background-color:hotpink" type="submit">Modifica stire</button>

            }
        </div>
    </div>
</div>




