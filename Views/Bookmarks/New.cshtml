@model IHeard.Models.Bookmark


<h2 class= "mb-5">Adaugare Bookmark</h2>



@using (Html.BeginForm(actionName: "New", controllerName: "Bookmarks", method: FormMethod.Post))
{

    @Html.Label("BookmarkName", "Denumire colectie")
    <br />

    @Html.TextBox("BookmarkName", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.BookmarkName, null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn" style="background-color:indianred" type="submit">Adauga bookmark</button>

}

